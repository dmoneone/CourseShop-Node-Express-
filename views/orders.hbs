<span>Orders</span>

<div>
    {{#if orders.length}}
        {{#each orders}}
            <div class="row">
                <div class="col s6 offset-s3">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">
                                Order: {{_id}}
                            </span>
                            <p><em>Username: </em> {{user.userId.name}}({{user.userId.email}})</p>
                            <p><em>Date:</em> {{date}}</p>

                            <ol>
                                {{#each courses}}
                                    <li>{{course.title}} x{{count}}</li>
                                {{/each}}
                            </ol>

                            <hr>

                            <p><em>Price:</em> <span class="course-price">{{totalPrice}}</span></p>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <span>You have not any order</span>
    {{/if}}
</div>
<div>
    <h2>Adding new course.</h2>
    <form action="/add" method="POST" id="adding-course-from">
        <div class="input-field">
          <input placeholder="Placeholder" name="title" id="title" type="text" class="validate" required>
          <label for="title">Title</label>
        </div>
        <div class="input-field">
          <input placeholder="Placeholder" name="price" id="price" type="text" class="validate" required>
          <label for="price">Price</label>
        </div>
        <div class="input-field">
          <input placeholder="Placeholder" name="img" id="img" type="text" class="validate" required>
          <label for="img">Url to image</label>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>